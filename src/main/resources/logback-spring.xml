<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%yellow(%d{dd-MM-yyyy HH:mm:ss.SSS}) %magenta([%thread]) %highlight(%-5level) %green(%logger{36}.%M) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender (Rolling) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/spring-boot-app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- File sẽ tự động xoay vòng mỗi ngày -->
            <fileNamePattern>${LOG_PATH}/spring-boot-app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Giữ lại log trong 30 ngày -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <!-- Log ra console -->
        <appender-ref ref="CONSOLE"/>
        <!-- Log ra file -->
        <appender-ref ref="FILE"/>
    </root>

</configuration>
